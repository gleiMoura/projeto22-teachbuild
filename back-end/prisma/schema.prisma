generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model disciplines {
  id       Int        @id @unique @default(autoincrement())
  name     String
  teachers teachers[]
}

model mbti {
  id       Int        @id @unique @default(autoincrement())
  name     String
  link     String
  teachers teachers[]
  studentes students[]
}

model teachers {
  id           Int         @id @unique @default(autoincrement())
  name         String
  email        String      @unique
  password     String
  image        String
  text         String
  mbtiId       Int
  disciplineId Int
  wallet       Float @db.Real  @default(0)
  likes        Int @default(0)        
  disciplines  disciplines @relation(fields: [disciplineId], references: [id])
  mbti         mbti        @relation(fields: [mbtiId], references: [id])
}

model students {
  id Int @id @unique @default(autoincrement())
  name String
  email String @unique
  image String
  text String
  mbtiId Int
  password String
  mbti mbti @relation(fields: [mbtiId], references: [id])
}
